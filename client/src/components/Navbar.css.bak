.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1e1e2f;
  padding: 10px 20px;
  color: white;
  position: sticky;
  top: 0;
  z-index: 100;
}

.logo {
  font-size: 1.5rem;
  display: flex;
  align-items: center;
  gap: 5px;
}

.nav-links {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 15px;
}

.nav-links li a {
  color: white;
  text-decoration: none;
  padding: 5px 10px;
  transition: 0.3s;
}

.nav-links li a:hover {
  background-color: #3a3a5c;
  border-radius: 5px;
}

.logout-btn {
  background-color: #ff4d4f;
  color: white;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

.logout-btn:hover {
  background-color: #ff7875;
}

.search-box {
  display: flex;
  gap: 5px;
}

.search-box input {
  padding: 5px 10px;
  border-radius: 5px;
  border: none;
  outline: none;
}

.search-box button {
  padding: 5px 10px;
  border-radius: 5px;
  border: none;
  background-color: #3a3a5c;
  color: white;
  cursor: pointer;
  transition: 0.3s;
}

.search-box button:hover {
  background-color: #59597a;
}
